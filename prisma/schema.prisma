// to configure your database connection and define your data models
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// to generate the Prisma Client for database access
generator client {
  provider = "prisma-client-js"
}

// define your data models here
model Todo{
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String?
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  
}
